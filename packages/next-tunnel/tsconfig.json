{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020", // Change to 'es2020' or 'preserve'
    "moduleResolution": "bundler", // Only works with 'preserve' or 'es2015+' modules
    "outDir": "./bin",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
